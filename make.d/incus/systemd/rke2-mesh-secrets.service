[Unit]
Description=Apply RKE2 mesh secrets
RequiresMountsFor=/srv/host/system.d /srv/host
After=local-fs.target
After=rke2-networking-ready-check.service
Requires=rke2-networking-ready-check.service
ConditionPathExists=/srv/host/scripts.d/rke2-layer-secrets-apply.sh

[Service]
Type=oneshot
ExecStart=/srv/host/scripts.d/rke2-layer-secrets-apply.sh mesh
RemainAfterExit=true
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target