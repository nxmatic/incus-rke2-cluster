apiVersion: kpt.dev/v1
kind: Kptfile
metadata:
  name: system
  annotations:
    config.kubernetes.io/local-config: "true"
info:
  description: |
    System layer for RKE2 cluster containing core infrastructure packages.
    
    Packages included:
    - flux-instance: GitOps operator instance
    - flux-operator: GitOps operator deployment  
    - porch: Package Orchestration Service
    - porch-resources: Porch resource definitions
    - replicator: Fleet replication service
    - replicator-resources: Replicator resource definitions
    - tekton-pipelines: CI/CD pipeline framework
    - traefik: Ingress controller
    - cilium: eBPF-based networking
